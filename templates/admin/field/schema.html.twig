{% block _Event_schema_widget %}
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        #controls {
            margin-bottom: 10px;
        }

        button, select {
            margin-right: 10px;
            padding: 8px 12px;
            cursor: pointer;
        }

        #modal {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            padding: 20px;
            border: 1px solid #ccc;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            z-index: 1000;
        }

        #modal select, #modal button {
            margin: 10px 0;
        }
    </style>
    <div id="controls">
        <button type="button" class="btn btn-primary" id="addChairBtn">Добавить место</button>
    </div>
    <div id="canvas-container">
        <canvas id="canvas" width="600"></canvas>
    </div>

    <div id="modal">
        <h3>Select Chair Type</h3>
        <select id="chairType">
            <option value="vip">VIP (Red)</option>
            <option value="standard">Standard (Blue)</option>
            <option value="accessible">Accessible (Green)</option>
        </select>
        <br>
        <button type="button" class="btn btn-success" id="confirmChairBtn">Confirm</button>
        <button type="button" class="btn btn-danger" id="cancelChairBtn">Cancel</button>
    </div>
{% endblock %}s